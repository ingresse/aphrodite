{

    // Enforcing options
    // http://www.jshint.com/docs/options/#enforcing-options

    "bitwise": true,
    "eqeqeq": true,
    "forin": true,
    "latedef": true,
    "noarg": true,
    "nonbsp": true,
    "nonew": true,
    "undef": true,
    "unused": true,

    // - - - - - - - - - - - - - - - - - - - - - - - - - - -

    // Relaxing options
    // http://www.jshint.com/docs/options/#relaxing-options

    "esnext": true,

    // - - - - - - - - - - - - - - - - - - - - - - - - - - -

    // Environments
    // http://www.jshint.com/docs/options/#environments

    "browser": true,
    "jquery": true,
    "node": true,
    "esnext": true,
    "bitwise": true,
    "camelcase": true,
    "curly": true,
    "eqeqeq": true,
    "immed": true,
    "indent": 4,
    "latedef": true,
    "newcap": true,
    "quotmark": "single",
    "regexp": true,
    "undef": true,
    "unused": true,
    "strict": true,
    "trailing": true,
    "smarttabs": true,
    "camelcase":false,
    "globals": {
        "angular"       : false,
        "creditCardType": false,
        "Croppie"       : false,
        "moment"        : false,
        "Prism"         : false
    }
}
